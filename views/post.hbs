{{#section 'css'}}
<style>
    .content-wrap img {
        width: 100%
    }
    .content-wrap iframe {
        width: 100%;
        height: 500px;
    }
    @media (max-width: 500px) {

        .content-wrap img {
            width: 100% !important;
            height: 100% !important;
        }

        .content-wrap iframe {
            width: 100% !important;
            height: 100% !important;
        }
    }
</style>
{{/section}}
<section class="latest-post-area pb-120">
    <div class="container no-padding">
        <div class="row">
            <div class="col-lg-8 post-list">
                <!-- Start single-post Area -->
                <div class="single-post-wrap">
                    <div class="content-wrap">
                        <h3>{{post.title}}</h3>
                        <ul class="tags mt-10">
                            <li><a href="/category/{{post.catId}}">{{post.catName}}</a></li>
                        </ul>                           
                        <ul class="meta pb-20">
                            <li><i class="fas fa-fw fa-user">&nbsp;&nbsp;&nbsp;</i>{{post.nickname}}</li>
                            <li><i class="fas fa-fw fa-calendar">&nbsp;&nbsp;&nbsp;</i>{{formatDate post.datePost}}</li>
                        </ul>
                        <div>{{{post.content}}}</div>
                        {{#if tags}}<span>tags:&nbsp;</span>{{/if}}  
                        {{#each tags as |tag|}}
                        <a href="/tag/{{tag.tagId}}"><span class="badge badge-primary">{{tag.tagName}}</span></a>
                        {{/each}}                          
                        <div class="comment-sec-area mt-5">
                            <div class="container">
                                <div class="row flex-column">
                                    {{#if comments}}<h5 class="mb-5">Comments</h5>{{/if}}
                                    {{#each comments as |com|}}
                                    <div class="comment-list">
                                        <div class="single-comment justify-content-between d-flex">
                                            <div class="user justify-content-between d-flex">
                                                <div class="thumb">
                                                    <img src="/img/user.jpg" alt="">
                                                </div>
                                                <div class="desc">
                                                    <h5>{{com.userName}}</h5>
                                                    <p class="date">{{formatDate com.dateComment}}</p>
                                                    <p class="comment">{{com.content}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="comment-form">
                        <form method="POST" action="">
                            <div class="form-group">
                                <textarea class="form-control mb-10" rows="5" name="content" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Comment</button>
                        </form>
                                                
                    </div>
                </div>

                <div class="latest-post-wrap">
                    {{#if relatedPosts}}<h6>Tin liên quan</h6>{{/if}}
                    {{#each relatedPosts as |post|}}
                    <div class="single-latest-post row align-items-center">
                        <div class="col-lg-5 post-left">
                            <a href="/post/{{post.postId}}">
                                <div class="feature-img relative">
                                <div class="overlay overlay-bg"></div>
                                <img class="img-fluid" src="{{post.srcImage}}" alt="">
                            </div>
                            </a>
                            <ul class="tags">
                                <li><a href="/category/{{post.idCat}}">{{post.catName}}</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-7 post-right">
                            <a href="/post/{{post.postId}}">
                                <h4>{{post.title}}</h4>
                            </a>
                            <ul class="meta">
                                <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                            </ul>
                            <p class="excert">{{post.subTitle}}</p>
                        </div>
                    </div>
                    <hr>
                    {{/each}}
                </div>
                <!-- End single-post Area -->
            </div>
            
             <!-- Top 10 chuyen muc -->
            <div class="col-lg-4">
                <div class="sidebars-area">
                    <div class="single-sidebar-widget most-popular-widget">
                        <h6 class="title">Top 10 chuyên mục</h6>
                        {{#each topPosts as |post|}}
                        <div class="single-list flex-row d-flex">
                            <div class="col-sm-4 no-padding">
                                <img src="{{post.srcImage}}" alt="">
                            </div>
                            <div class="col-sm-8 details">
                                <a href="/post/{{post.postId}}">
                                    <h6>{{post.title}}</h6>
                                </a>
                                <ul class="meta">
                                    <li><a href="/category/{{post.idCat}}"><span class="badge badge-secondary">{{this.catName}}</span></a></li><br>
                                    <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                </ul>
                            </div>
                        </div>
                        {{/each}}                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>