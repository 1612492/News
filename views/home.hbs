<section class="top-post-area pt-10">
    <div class="container no-padding">
        <div class="row small-gutters">
            <div class="col-lg-8 top-post-left">
                <div class="feature-image-thumb relative">
                    <div class="overlay overlay-bg"></div>
                    <img class="img-fluid" style="height: 100%;" src="{{featurePosts.0.srcImage}}"
                        alt="">
                </div>
                <div class="top-post-details">
                    <ul class="tags">
                        <li><a href="/category/{{featurePosts.0.catId}}">{{featurePosts.0.catName}}</a></li>
                    </ul>
                    <a href="/post/{{featurePosts.0.postId}}">
                        <h3>{{featurePosts.0.title}}</h3>
                    </a>
                    <ul class="meta">
                        <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate featurePosts.0.datePost}}</li>
                        <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{featurePosts.0.viewCount}}</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 top-post-right">
                <div class="single-top-post">
                    <div class="feature-image-thumb relative">
                        <div class="overlay overlay-bg"></div>
                        <img class="img-fluid h-100" src="{{featurePosts.1.srcImage}}" alt="">
                    </div>
                    <div class="top-post-details">
                        <ul class="tags">
                            <li><a href="/category/{{featurePosts.1.catId}}">{{featurePosts.1.catName}}</a></li>
                        </ul>
                        <a href="/post/{{featurePosts.1.postId}}">
                            <h4>{{featurePosts.1.title}}</h4>
                        </a>
                        <ul class="meta">
                            <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate featurePosts.1.datePost}}</li>
                            <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{featurePosts.1.viewCount}}</li>
                        </ul>
                    </div>
                </div>
                <div class="single-top-post mt-10">
                    <div class="feature-image-thumb relative">
                        <div class="overlay overlay-bg"></div>
                        <img class="img-fluid h-100" src="{{featurePosts.2.srcImage}}" alt="">
                    </div>
                    <div class="top-post-details">
                        <ul class="tags">
                            <li><a href="/category/{{featurePosts.2.catId}}">{{featurePosts.2.catName}}</a></li>
                        </ul>
                        <a href="/post/{{featurePosts.2.postId}}">
                            <h4>{{featurePosts.2.title}}</h4>
                        </a>
                        <ul class="meta">
                            <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate featurePosts.2.datePost}}</li>
                            <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{featurePosts.2.viewCount}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="latest-post-area pb-120">
    <div class="container no-padding">
        <div class="row">
            <div class="col-lg-8 post-list">
                <!-- xem nhieu nhat -->
                <div class="latest-post-wrap">
                    <h4 class="cat-title">Xem nhiều nhất</h4>
                    {{#each mostViewPosts as |post|}}
                    {{#ifEquals post.type 'premium'}}
                    <div class="single-latest-post row align-items-center">
                        <div class="col-lg-5 post-left">
                            <div class="feature-img relative">
                                <div class="overlay overlay-bg"></div>
                                <img class="img-fluid" src="{{post.srcImage}}" alt="">
                            </div>
                            <ul class="tags">
                                <li><a href="/category/{{post.idCat}}">{{post.catName}}</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-7 post-right">
                            <a href="/post/{{post.postId}}">
                                <h4>{{post.title}}</h4>
                            </a>
                            <ul class="meta">
                                <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.viewCount}}</li>
                                <li class="text-warning"><i class="fas fa-fw fa-star">&nbsp;</i>{{post.type}}</li>
                            </ul>
                            <p class="excert">{{post.subTitle}}</p>
                        </div>
                    </div>
                    {{else}}
                    <div class="single-latest-post row align-items-center">
                        <div class="col-lg-5 post-left">
                            <div class="feature-img relative">
                                <div class="overlay overlay-bg"></div>
                                <img class="img-fluid" src="{{post.srcImage}}" alt="">
                            </div>
                            <ul class="tags">
                                <li><a href="/category/{{post.idCat}}">{{post.catName}}</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-7 post-right">
                            <a href="/post/{{post.postId}}">
                                <h4>{{post.title}}</h4>
                            </a>
                            <ul class="meta">
                                <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.viewCount}}</li>
                            </ul>
                            <p class="excert">{{post.subTitle}}</p>
                        </div>
                    </div>
                    {{/ifEquals}}
                    {{/each}}
                </div>

                <!-- Tin moi nhat -->
                <div class="relavent-story-post-wrap mt-30">
                    <h4 class="title">Tin mới nhất</h4>
                    <div class="relavent-story-list-wrap">
                        {{#each lastestPosts as |post|}}
                        {{#ifEquals post.type 'premium'}}
                        <div class="single-relavent-post row align-items-center">
                            <div class="col-lg-5 post-left">
                                <div class="feature-img relative">
                                    <div class="overlay overlay-bg"></div>
                                    <img class="img-fluid" src="{{post.srcImage}}" alt="">
                                </div>
                                <ul class="tags">
                                    <li><a href="/category/{{post.idCat}}">{{post.catName}}</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-7 post-right">
                                <a href="/post/{{post.postId}}">
                                    <h4>{{post.title}}</h4>
                                </a>
                                <ul class="meta">
                                    <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                    <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.viewCount}}</li>
                                    <li class="text-warning"><i class="fas fa-fw fa-star">&nbsp;</i>{{post.type}}</li>
                                </ul>
                                <p class="excert">{{post.subTitle}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="single-relavent-post row align-items-center">
                            <div class="col-lg-5 post-left">
                                <div class="feature-img relative">
                                    <div class="overlay overlay-bg"></div>
                                    <img class="img-fluid" src="{{post.srcImage}}" alt="">
                                </div>
                                <ul class="tags">
                                    <li><a href="/category/{{post.idCat}}">{{post.catName}}</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-7 post-right">
                                <a href="/post/{{post.postId}}">
                                    <h4>{{post.title}}</h4>
                                </a>
                                <ul class="meta">
                                    <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                    <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.viewCount}}</li>
                                </ul>
                                <p class="excert">{{post.subTitle}}</p>
                            </div>
                        </div>
                        {{/ifEquals}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <!-- Top 10 chuyen muc -->
            <div class="col-lg-4">
                <div class="sidebars-area">
                    <div class="single-sidebar-widget most-popular-widget">
                        <h6 class="title">Top 10 chuyên mục</h6>
                        {{#each topPosts as |post|}}
                        <div class="single-list flex-row d-flex">
                            <div class="col-sm-4 no-padding">
                                <img src="{{post.srcImage}}" alt="">
                            </div>
                            <div class="col-sm-8 details">
                                <a href="/post/{{post.postId}}">
                                    <h6>{{post.title}}</h6>
                                </a>
                                <ul class="meta">
                                    <li><a href="/category/{{post.idCat}}"><span
                                                class="badge badge-secondary">{{this.catName}}</span></a></li><br>
                                    <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                </ul>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>