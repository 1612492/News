<section class="latest-post-area pb-120">
    <div class="container no-padding">
        <div class="row">
            <div class="col-lg-8 post-list">
                <div class="latest-post-wrap">
                    {{#each rows as |post|}}
                    {{#ifEquals post.0.type 'premium'}}
                    <div class="single-latest-post row align-items-center">
                        <div class="col-lg-5 post-left">
                            <a href="/post/{{post.0.postId}}">
                                <div class="feature-img relative">
                                    <div class="overlay overlay-bg"></div>
                                    <img class="img-fluid" src="{{post.0.srcImage}}" alt="">
                                </div>
                            </a>
                            <ul class="tags">
                                <li><a href="/category/{{post.0.idCat}}">{{post.0.catName}}</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-7 post-right">
                            <a href="/post/{{post.0.postId}}">
                                <h4>{{post.0.title}}</h4>
                            </a>
                            <ul class="meta">
                                <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.0.datePost}}</li>
                                <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.0.viewCount}}</li>
                                <li class="text-warning"><i class="fas fa-fw fa-star">&nbsp;</i>{{post.0.type}}</li>
                            </ul>
                            <p class="excert">{{post.0.subTitle}}</p>
                            {{#each post}}
                            {{#if @first}}
                            {{else}}
                            <a href="/tag/{{this.tagId}}"><span class="badge badge-primary">{{this.tagName}}</span></a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <hr>
                    {{else}}
                    <div class="single-latest-post row align-items-center">
                        <div class="col-lg-5 post-left">
                            <a href="/post/{{post.0.postId}}">
                                <div class="feature-img relative">
                                    <div class="overlay overlay-bg"></div>
                                    <img class="img-fluid" src="{{post.0.srcImage}}" alt="">
                                </div>
                            </a>
                            <ul class="tags">
                                <li><a href="/category/{{post.0.idCat}}">{{post.0.catName}}</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-7 post-right">
                            <a href="/post/{{post.0.postId}}">
                                <h4>{{post.0.title}}</h4>
                            </a>
                            <ul class="meta">
                                <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.0.datePost}}</li>
                                <li><i class="fas fa-fw fa-eye">&nbsp;</i>{{post.0.viewCount}}</li>
                            </ul>
                            <p class="excert">{{post.0.subTitle}}</p>
                            {{#each post}}
                            {{#if @first}}
                            {{else}}
                            <a href="/tag/{{this.tagId}}"><span class="badge badge-primary">{{this.tagName}}</span></a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <hr>
                    {{/ifEquals}}
                    {{/each}}
                </div>
            </div>

            <!-- Top 10 chuyen muc -->
            <div class="col-lg-4">
                <div class="sidebars-area">
                    <div class="single-sidebar-widget most-popular-widget">
                        <h6 class="title">Top 10 chuyên mục</h6>
                        {{#each topPosts as |post|}}
                        <div class="single-list flex-row d-flex">
                            <div class="col-sm-4 no-padding">
                                <img src="{{post.srcImage}}" alt="">
                            </div>
                            <div class="col-sm-8 details">
                                <a href="/post/{{post.postId}}">
                                    <h6>{{post.title}}</h6>
                                </a>
                                <ul class="meta">
                                    <li><a href="/category/{{post.idCat}}"><span
                                                class="badge badge-secondary">{{this.catName}}</span></a></li><br>
                                    <li><i class="fas fa-fw fa-calendar">&nbsp;</i>{{formatDate post.datePost}}</li>
                                </ul>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>